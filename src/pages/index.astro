---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const currentPath = Astro.url.pathname;
const lang = 'en';

const title = 'Syaiful Anam - Lifelong Builder';
const description = 'A lifelong builder applying learnings in tech and business, contributing to Digital360 and Fabrik Group with AI-driven development.';
---

<Layout title={title} description={description} lang={lang}>
	<div class="container">
		<Header currentPath={currentPath} lang={lang} />

		<main class="main-content">
			<div class="hero-section">
				<img
					src="/images/syanampro.webp"
					alt="Syaiful Anam"
					class="profile-image"
					width="120"
					height="120"
				/>

				<h1>Syaiful Anam</h1>
				<p class="hero-subtitle">
					A lifelong builder. Applying my learnings in tech and business.
				</p>

				<div class="content-boxes">
					<div class="content-box">
						<h2>ðŸš€ Contributing at Digital360</h2>
						<p>
							I'm part of the team building the next generation of B2B software.
							I'm learning to apply my full-stack and AI knowledge to help accelerate our product development.
						</p>
						<a href="https://digital360.co.id/" target="_blank" rel="noopener noreferrer" class="cta-link">
							See Our Work â†’
						</a>
					</div>

					<div class="content-box">
						<h2>ðŸ‘• Contributing at Fabrik Group</h2>
						<p>
							I'm also learning how to bring a tech-first mindset to the garment industry.
							I work with the founders of our 5 fashion brands to explore and implement technology that can streamline our operations.
						</p>
						<a href="https://fabrik.group/" target="_blank" rel="noopener noreferrer" class="cta-link">
							Explore Our Brands â†’
						</a>
					</div>
				</div>

				<div class="focus-section">
					<h2>ðŸ¤– My Core Focus: AI-Driven Development</h2>
					<p>
						Across both ventures, my main focus is on learning and using AI as a tool to build, test,
						and deploy solutions faster and more efficiently.
					</p>
				</div>
			</div>
		</main>
		<Footer lang={lang} />
	</div>
</Layout>

<style>
	.main-content {
		min-height: calc(100vh - 200px);
	}

	.hero-section {
		text-align: center;
		padding: var(--spacing-xl) 0;
	}

	.profile-image {
		width: 80px;
		height: 80px;
		border-radius: 50%;
		margin-bottom: var(--spacing-md);
		border: 2px solid var(--color-border);
		transition: border-color 0.3s ease;
	}

	.profile-image:hover {
		border-color: var(--color-text);
	}

	.hero-subtitle {
		font-size: 1.125rem;
		color: var(--color-text-secondary);
		margin-bottom: var(--spacing-2xl);
		font-weight: 400;
		line-height: 1.5;
	}

	.content-boxes {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
		gap: var(--spacing-lg);
		margin-bottom: var(--spacing-2xl);
		text-align: left;
	}

	.content-box {
		background-color: var(--color-surface);
		border: 1px solid var(--color-border);
		border-radius: 6px;
		padding: var(--spacing-lg);
		transition: border-color 0.2s ease;
		position: relative;
		overflow: hidden;
	}

	.content-box:hover {
		border-color: var(--color-text);
	}

	.content-box h2 {
		font-size: 1.25rem;
		margin-top: 0;
		margin-bottom: var(--spacing-md);
	}

	.content-box p {
		margin-bottom: var(--spacing-lg);
		color: var(--color-text-secondary);
	}

	.cta-link {
		display: inline-flex;
		align-items: center;
		color: var(--color-text-secondary);
		font-weight: 400;
		text-decoration: none;
		transition: color 0.2s ease;
		font-size: 0.9375rem;
	}

	.cta-link:hover {
		color: var(--color-text);
	}

	.focus-section {
		background-color: var(--color-surface);
		border: 1px solid var(--color-border);
		border-radius: 6px;
		padding: var(--spacing-lg);
		text-align: center;
		max-width: 600px;
		margin: 0 auto;
	}

	.focus-section h2 {
		font-size: 1.5rem;
		margin-top: 0;
		margin-bottom: var(--spacing-md);
	}

	.focus-section p {
		font-size: 1.125rem;
		color: var(--color-text-secondary);
		margin-bottom: 0;
	}

	/* Responsive design */
	@media (max-width: 640px) {
		.hero-section {
			padding: var(--spacing-lg) 0;
		}

		.profile-image {
			width: 64px;
			height: 64px;
			margin-bottom: var(--spacing-sm);
		}

		.hero-subtitle {
			font-size: 1rem;
			margin-bottom: var(--spacing-xl);
		}

		.content-boxes {
			grid-template-columns: 1fr;
			gap: var(--spacing-md);
		}

		.content-box {
			padding: var(--spacing-md);
		}

		.focus-section {
			padding: var(--spacing-md);
		}

		h1 {
			font-size: 1.75rem;
		}

		.content-box h2,
		.focus-section h2 {
			font-size: 1.125rem;
		}
	}
</style>