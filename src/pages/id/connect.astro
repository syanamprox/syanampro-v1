<script>
	document.addEventListener('DOMContentLoaded', function() {
		const toggleKey = document.getElementById('toggle-key');
		const publicKeyBlock = document.getElementById('public-key-block');

		if (toggleKey && publicKeyBlock) {
			toggleKey.addEventListener('click', function(e) {
				e.preventDefault();

				if (publicKeyBlock.style.display === 'none') {
					publicKeyBlock.style.display = 'block';
					toggleKey.textContent = 'Hide Public Key';
				} else {
					publicKeyBlock.style.display = 'none';
					toggleKey.textContent = 'Show Public Key';
				}
			});
		}
	});
</script>

<style>
	.main-content {
		min-height: calc(100vh - 200px);
	}

	.connect-content {
		padding: var(--spacing-xl) 0;
	}

	.intro-section {
		text-align: center;
		margin-bottom: var(--spacing-xl);
	}

	.intro-section p {
		font-size: 1.125rem;
		color: var(--color-text-secondary);
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.6;
	}

	.contact-methods {
		margin-bottom: var(--spacing-2xl);
	}

	.contact-methods h2 {
		text-align: center;
		margin-bottom: var(--spacing-lg);
	}

	.contact-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: var(--spacing-md);
	}

	.contact-card {
		background-color: var(--color-surface);
		border: 1px solid var(--color-border);
		border-radius: 12px;
		padding: var(--spacing-lg);
		display: flex;
		align-items: center;
		gap: var(--spacing-md);
		text-decoration: none;
		color: var(--color-text);
		transition: all 0.3s ease;
		position: relative;
	}

	.contact-card:hover {
		transform: translateY(-2px);
		border-color: var(--color-accent);
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
	}

	.contact-card:hover .contact-arrow {
		transform: translateX(4px);
		color: var(--color-accent);
	}

	.contact-icon {
		font-size: 2rem;
		width: 60px;
		height: 60px;
		display: flex;
		align-items: center;
		justify-content: center;
		background-color: var(--color-background);
		border-radius: 12px;
		flex-shrink: 0;
	}

	.contact-info {
		flex: 1;
	}

	.contact-info h3 {
		margin: 0 0 var(--spacing-xs) 0;
		font-size: 1.125rem;
	}

	.contact-info p {
		margin: 0 0 var(--spacing-xs) 0;
		color: var(--color-text-secondary);
		font-size: 0.875rem;
		line-height: 1.4;
	}

	.contact-url {
		font-size: 0.75rem;
		color: var(--color-text-light);
		font-family: monospace;
	}

	.contact-arrow {
		color: var(--color-text-light);
		font-size: 1.25rem;
		transition: all 0.2s ease;
		flex-shrink: 0;
	}

	.topics-section {
		margin-bottom: var(--spacing-2xl);
	}

	.topics-section h2 {
		text-align: center;
		margin-bottom: var(--spacing-lg);
	}

	.topics-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: var(--spacing-sm);
	}

	.topic-item {
		background-color: var(--color-surface);
		border: 1px solid var(--color-border);
		border-radius: 8px;
		padding: var(--spacing-md);
		display: flex;
		align-items: center;
		gap: var(--spacing-sm);
		font-size: 0.875rem;
		color: var(--color-text-secondary);
	}

	.topic-bullet {
		font-size: 1rem;
		flex-shrink: 0;
	}

	.cta-section {
		margin-bottom: var(--spacing-xl);
	}

	.cta-card {
		background-color: var(--color-surface);
		border: 1px solid var(--color-border);
		border-radius: 12px;
		padding: var(--spacing-xl);
		text-align: center;
	}

	.cta-card h2 {
		margin-top: 0;
		margin-bottom: var(--spacing-md);
		font-size: 1.5rem;
	}

