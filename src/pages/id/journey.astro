	}

	.timeline-content p {
		margin-bottom: var(--spacing-md);
		color: var(--color-text-secondary);
	}

	.learnings {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.learnings li {
		padding: var(--spacing-xs) 0;
		color: var(--color-text-secondary);
		position: relative;
		padding-left: var(--spacing-md);
	}

	.learnings li::before {
