---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const currentPath = Astro.url.pathname;
const lang = 'en';

const title = "Let's Connect & Learn Together - Syaiful Anam";
const description = 'Connect with me to discuss technology, business, AI, and potential collaborations. Let\'s build something amazing together.';

// Contact options

---

<Layout title={title} description={description} lang={lang}>
	<div class="container">
		<Header currentPath={currentPath} lang={lang} />

		<main class="main-content">
			<div class="connect-content">
				<h1 style="text-align: center;">Let's Connect & Learn Together</h1>

				<div class="intro-section">
					<p>
						I'm always excited to connect with fellow builders, entrepreneurs, and technology enthusiasts. Whether you want to discuss AI implementation, share insights about B2B software, or explore potential collaborations, I'm here for meaningful conversations.
					</p>
				</div>

				<div class="contact-methods">
					<h2 style="text-align: center; margin: 32px 0 16px 0;">Ways to Reach Me</h2>

					<div class="contact-methods-grid">
						<div class="contact-card">
							<h3>Email</h3>
							<div>
								<a href="mailto:iam@syanam.pro" style="text-decoration: none; color: var(--color-text);">iam@syanam.pro</a>
							</div>
							<p>For personal conversations or general questions</p>
						</div>

						<div class="contact-card">
							<h3>WhatsApp</h3>
							<div>
								<a href="https://wa.me/6285156858298?text=Hi+Syaiful+Anam,+I'm+interested+in+discussing+business+with+Digital360" target="_blank" style="text-decoration: none; color: var(--color-text);" rel="noopener noreferrer">0851-5685-8298</a>
							</div>
							<p>Digital360 - For business and collaborations</p>
						</div>
					</div>

					<p style="text-align: center; font-size: 0.875rem; color: var(--color-text-secondary); font-style: italic; margin-top: 16px;">
