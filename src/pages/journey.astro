	}

	.timeline-content h3:first-child {
		margin-top: 0;
	}

	.story-highlight {
		background: linear-gradient(135deg, var(--color-surface), rgba(var(--color-accent-rgb), 0.05));
		border-left: 4px solid var(--color-accent);
		border-radius: 8px;
		padding: var(--spacing-lg);
		margin: var(--spacing-md) 0;
		position: relative;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
	}

	.story-highlight::before {
		content: '"';
		position: absolute;
		top: -10px;
		left: var(--spacing-md);
		font-size: 3rem;
		color: var(--color-accent);
		font-weight: 700;
		line-height: 1;
		opacity: 0.6;
	}

	.story-highlight p {
		font-style: italic;
		color: var(--color-text);
		margin: 0;
		line-height: 1.7;
		font-size: 1.1rem;
		position: relative;
		z-index: 1;
	}

	.quote {
		font-style: italic;
		color: var(--color-text-light);
		margin-top: var(--spacing-lg);
		margin-bottom: 0;
		font-size: 1rem;
		text-align: center;
	}

	.mentor-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: var(--spacing-md);
		margin-top: var(--spacing-md);
	}

	.mentor-card {
		background-color: var(--color-background);
		border: 1px solid var(--color-border);
		border-radius: 8px;
		padding: var(--spacing-md);
		text-align: center;
		transition: all 0.3s ease;
	}

	.mentor-card:hover {
		border-color: var(--color-accent);
		transform: translateY(-2px);
	}

	.mentor-card h4 {
		margin-top: 0;
		margin-bottom: var(--spacing-xs);
		color: var(--color-text);
		font-size: 0.9375rem;
		font-weight: 600;
	}

	.mentor-card p {
		margin: var(--spacing-xs) 0;
		color: var(--color-text-secondary);
		font-size: 0.875rem;
	}

	.mentor-role {
		font-style: italic;
		color: var(--color-text-light) !important;
		margin-top: var(--spacing-sm) !important;
		line-height: 1.4;
	}

	.friends-section {
		margin-bottom: var(--spacing-md);
		padding: var(--spacing-md);
		background-color: var(--color-surface);
		border-radius: 12px;
		border: 1px solid var(--color-border);
	}

	.friends-section h3 {
		margin-top: 0;
		margin-bottom: var(--spacing-md);
		color: var(--color-text);
		font-size: 1.125rem;
	}

	.friends-grid {
